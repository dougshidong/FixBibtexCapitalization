  file     = {Sheshadri2018_StabilityFRQuadAdvDiff_.pdf:HigherOrder/FR/Sheshadri2018 - An Analysis of Stability of the Flux Reconstruction Formulation on Quadrilateral Elements for the Linear Advection Diffusion Equation.pdf:PDF},
