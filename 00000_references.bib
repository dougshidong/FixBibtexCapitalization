@Article{Sheshadri2018,
  author   = {Sheshadri, Abhishek and Jameson, Antony},
  title    = {An analysis of stability of the flux reconstruction formulation on quadrilateral elements for the linear advection--diffusion equation},
  journal  = {Journal of Scientific Computing},
